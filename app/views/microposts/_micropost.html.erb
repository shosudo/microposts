<li id="micropost-<%= micropost.id %>">
  <%# ユーザーアイコンがある場合は、ユーザーアイコンを表示する %>
  <% if micropost.user.usericon? %>
    <div class="usericon">
    <%= image_tag micropost.user.usericon.thumb.url %>
    </div>
  <% else %>
    <%= gravatar_for(micropost.user,size:50) %>
  <% end %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前に投稿
    <% if current_user == micropost.user %>
      <%= link_to "削除する", micropost_path(micropost), method: :delete, data: { confirm: "本当に削除しますか?" } %>
    <% end %>
  </span>
</li>