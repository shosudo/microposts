<h1>登録情報</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="table-responsive">
        <table class="table table-bordered table--profile">
          <tbody>
            <tr>
              <th class="t--top" width="180">ユーザーアイコン</th>  
              <td class="t--top"><%=gravatar_for @user%></td>
            </tr>
            <tr>
              <th>ユーザー名</th>
              <td><%=@user.name%></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%=@user.email%></td>
            </tr>
            <tr>
              <th>プロフィール</th>
              <td><%=@user.profile%></td>
            </tr>
            <tr>
              <th>住所</th>
                <td><%=@user.address%></td>
            </tr>
          </tbody>
        </table>
      </div>
      <%= link_to "登録情報を編集する", edit_user_path(current_user) if logged_in? %>
      <%# ログインされていなかったら実行されない %>
      <%# current_user.idでも良い %>
    </div>
</div>
