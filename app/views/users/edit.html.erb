<h1>登録情報を編集する</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <%# object=@user %>
        
            <%= f.label :name,"名前" %>
            <%= f.text_field :name, :placeholder => "2-50文字以内で入力してください", class:'form-control' %>
            
            <%= f.label :email,"メールアドレス" %>
            <%= f.text_field :email, :placeholder => "2-255文字以内で入力してください", class:'form-control' %>
            
            <%= f.label :profile,"プロフィール" %>
            <%= f.text_field :profile, :placeholder => "100文字以内で入力してください", class:'form-control' %>
            
            <%= f.label :address,"住所" %>
            <%= f.text_field :address, :placeholder => "100文字以内で入力してください", class:'form-control' %>

            <%= f.submit "更新する", class:"btn btn-large btn-primary" %>
            <%# <input type="submit" name="Create my account" value="Create User" /> %>
        <% end %>
    </div>
</div>
