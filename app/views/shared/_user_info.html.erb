<% if current_user.usericon? %>
    <div class="usericon">
    <%= image_tag current_user.usericon.url %>
    </div>
<% else %>
    <%= link_to gravatar_for(current_user, size: 50), current_user %>
<% end %>
<%# current_userはsession_helper, cssでfloat: left; %>
<h1><%= current_user.name %></h1>
<span><%= link_to "プロフィール詳細", current_user %></span>
<span><%= current_user.microposts.count%>件の投稿 | 
<%= link_to "フォロー", followings_user_path(current_user) if logged_in? %> | 
<%= link_to "フォロワー", followers_user_path(current_user) if logged_in? %></span>